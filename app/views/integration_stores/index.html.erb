<p id="notice"><%= notice %></p>

<h1>Integration Stores</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Store name</th>
      <th>Api key</th>
      <th>Password</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @integration_stores.each do |integration_store| %>
      <tr>
        <td><%= integration_store.kind %></td>
        <td><%= integration_store.store_name %></td>
        <td><%= integration_store.api_key %></td>
        <td><%= integration_store.password %></td>
        <td><%= integration_store.user_id %></td>
        <td><%= link_to 'Show', integration_store %></td>
        <td><%= link_to 'Edit', edit_integration_store_path(integration_store) %></td>
        <td><%= link_to 'Destroy', integration_store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Integration Store', new_integration_store_path %>
